{
  "name": "Ansible Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--name=ansible-debug",
    "--user=vscode",
    "--security-opt=no-new-privileges",
    "--cap-drop=ALL"
  ],
  "remoteUser": "vscode",
  "workspaceMount": "source=${localWorkspaceFolder},target=/ansible,type=bind",
  "workspaceFolder": "/ansible",
  "mounts": [
    "source=${localEnv:USERPROFILE}\\.ssh,target=/home/vscode/.ssh,type=bind,readonly"
  ],
  "containerEnv": {
    "ANSIBLE_CONFIG": "/ansible/ansible.cfg"
  },
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash",
    "ansible.python.interpreterPath": "/usr/local/bin/python"
  },
  "extensions": [
    "redhat.ansible",
    "ms-vscode-remote.remote-ssh"
  ]
}
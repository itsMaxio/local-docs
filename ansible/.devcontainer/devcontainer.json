{
  "name": "Ansible Dev Container",

  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--name=ansible-debug"
  ],
  "mounts": [
    { "source": "/var/run/docker.sock", "target": "/var/run/docker.sock", "type": "bind" }
  ],  
  "workspaceMount": "source=${localWorkspaceFolder},target=/ansible,type=bind",
  "workspaceFolder": "/ansible",

  "containerEnv": {
    "ANSIBLE_CONFIG": "/ansible/ansible.cfg"
  },
    
  "customizations": {
    "vscode": {
      "extensions": ["redhat.ansible"]
    }
  },
  "remoteUser": "root"
}